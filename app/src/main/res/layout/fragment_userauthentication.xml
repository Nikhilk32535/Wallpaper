<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">

    <RelativeLayout
        android:id="@+id/signinlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:visibility="visible"
        >

        <LinearLayout
            android:id="@+id/firstlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bgcorner"
            android:backgroundTint="@color/blur">
        <!-- App Logo or Icon -->
        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user_circle"
            app:tint="@color/Accent" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/Text"
        android:textStyle="bold"
        android:textSize="26sp"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bgcorner"
            android:backgroundTint="@color/blur"
            android:layout_below="@+id/firstlayout"
            android:layout_margin="16dp">

    <!-- Email Input -->
    <EditText
        android:id="@+id/useremail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:paddingStart="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/Text"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_mail"
        />

    <!-- Password Input -->
    <EditText
        android:id="@+id/inputPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/Text"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/ic_password"
        android:paddingStart="5dp"
        />

    <!-- Sign In Button -->
    <Button
        android:id="@+id/btnSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:textAllCaps="false"
        android:backgroundTint="@color/Button"
        android:textColor="@android:color/white"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"/>

    <!-- Forgot Password Link -->
    <TextView
        android:id="@+id/txtForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textColor="@color/Text"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:layout_marginTop="15dp"
        android:textSize="18sp"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account?"
                android:textColor="@color/Text"
                android:textSize="18sp"/>
                <!-- Sign Up Link -->
            <TextView
                android:id="@+id/txtSignUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textStyle="italic"
                android:textColor="@color/Text"
                android:textSize="18sp"/>


        </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/forgetlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:visibility="gone"
        android:layout_margin="30dp"
        android:background="@color/blur">

    <ImageView
        android:id="@+id/forgetlogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/forgetdisc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password? Don't WorryðŸ˜Š"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/forgetlogo"
        android:layout_margin="25dp"
        android:gravity="center"
        android:textColor="@color/Text"
        android:textSize="22sp"
        tools:ignore="HardcodedText" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forgetemail"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:layout_below="@id/forgetdisc"
        android:layout_margin="16dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/sentemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sent Email"
        android:layout_margin="22dp"
        android:layout_below="@id/forgetemail"
        android:layout_centerInParent="true"
        android:backgroundTint="@color/Button"
        android:textColor="@android:color/white"/>

   <TextView
       android:id="@+id/signinpage"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Sign in"
       android:textColor="@color/Text"
       android:layout_centerHorizontal="true"
       android:layout_below="@+id/sentemail"
       android:textSize="18sp"
       />

</RelativeLayout>

</RelativeLayout>
